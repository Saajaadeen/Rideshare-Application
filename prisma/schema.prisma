generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(uuid())
  baseId      String?    
  base        Base?      @relation(fields: [baseId], references: [id])
  firstName   String
  lastName    String
  phoneNumber String     
  email       String     @unique
  password    String
  isAdmin     Boolean    @default(false)
  isDriver    Boolean    @default(false)
  isPassenger Boolean    @default(true)
  isReset     Boolean    @default(false)
  resetCode   String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  requests    Request[]
  vehicles    Vehicle[]
}

model Vehicle {
  id        String   @id @default(uuid())
  userId    String?  @unique
  year      String
  make      String
  model     String
  color     String
  plate     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User?    @relation(fields: [userId], references: [id])
}

model Station {
  id          String     @id @default(uuid())
  baseId      String
  base        Base       @relation(fields: [baseId], references: [id])
  name        String
  longitude   String
  latitude    String
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  pickupRequests  Request[] @relation("PickupStation")
  dropoffRequests Request[] @relation("DropoffStation")
}

model Request {
  id         String   @id @default(uuid())
  userId     String?
  pickupId   String?
  dropoffId  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User?    @relation(fields: [userId], references: [id])
  pickup     Station? @relation("PickupStation", fields: [pickupId], references: [id])
  dropoff    Station? @relation("DropoffStation", fields: [dropoffId], references: [id])
}

model Base {
  id            String    @id @default(uuid())
  name          String
  abbreviation  String?
  state         String
  long          String
  lat           String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  users         User[]
  stations      Station[]
}
