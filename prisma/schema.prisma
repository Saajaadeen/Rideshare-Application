generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String      @id @default(uuid())
  firstName      String
  lastName       String
  phoneNumber    String      @unique
  email          String      @unique
  password       String
  code           String?
  isAdmin        Boolean     @default(false)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  passengers     Passenger[]
  requests       Request[]
  squadrons      Squadron[]
  vehicles       Vehicle[]
}

model Passenger {
  id        String   @id @default(uuid())
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
}

model Driver {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vehicle {
  id        String   @id @default(uuid())
  userId    String?
  year      String
  make      String
  model     String
  color     String
  plate     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
}

model Dropoff {
  id              String    @id @default(uuid())
  dropoffLocation String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  requests        Request[] @relation("DropoffRequests")
}

model Pickup {
  id             String    @id @default(uuid())
  pickupLocation String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  requests       Request[] @relation("PickupRequests")
}

model Request {
  id        String   @id @default(uuid())
  userId    String?
  pickupId  String?
  dropoffId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  dropoff   Dropoff? @relation("DropoffRequests", fields: [dropoffId], references: [id])
  pickup    Pickup?  @relation("PickupRequests", fields: [pickupId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])
}

model Squadron {
  id           String   @id @default(uuid())
  userId       String?
  squadronName String
  baseId       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  base         Base?    @relation(fields: [baseId], references: [id])
  user         User?    @relation(fields: [userId], references: [id])
}

model Base {
  id        String     @id @default(uuid())
  baseName  String
  baseState String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  squadrons Squadron[]
}
