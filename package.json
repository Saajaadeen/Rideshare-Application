{
  "name": "ridesharing-app",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"react-router dev --port 3000 --host\" \"npm run dev:ws\"",
    "dev:ws": "tsx watch server/websocket-server.js",
    "dev:all": "npx concurrently \"npm run dev\" \"npm run dev:ws\"",
    "build": "react-router build",
    "start": "react-router-serve ./build/server/index.js",
    "start:prod": "concurrently \"npm start\" \"npm run ws:start\"",
    "ws:start": "tsx server/websocket-server.ts"
  },
  "dependencies": {
    "@oslojs/crypto": "^1.0.1",
