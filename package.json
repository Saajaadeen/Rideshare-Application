    "@react-router/serve": "^7.9.2",
    "@types/nodemailer": "^7.0.4",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.34",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "isbot": "^5.1.31",
    "maplibre-gl": "^5.13.0",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "prisma": "^7.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-google-recaptcha": "^3.1.0",
    "react-router": "^7.9.2",
    "react-toastify": "^11.0.5",
